<!doctype html>
<html lang="en">
    <body>
        <form action="/contract/{{contractID}}/stages/{{stageID}}/edit" method="post">
            <label for="name">Name:</label>
            <input type="text" name="name" value="{{stageName}}" required/>
            <label for="beginDate">Begin Date:</label>
            <input type="date" name="beginDate" value="{{beginDate}}" required/>
            <label for="endDate">End Date:</label>
            <input type="date" name="endDate" value="{{endDate}}" min="{{beginDate}}" required/>
            <label for="cost">Cost:</label>
            <input type="number" name="cost" value="{{cost}}" min="0" required/>
            <label for="paymentDate">PaymentDate:</label>
            <input type="date" name="paymentDate" value="{{paymentDate}}" required/>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </body>
</html>